<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yjbiankuang_white">

        <TextView
            android:id="@+id/nosure"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="12dp"
            android:text="×"
            android:textColor="#EF383A"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_class_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="22dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/xz_bj"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_weight="1"
                    android:background="@drawable/yjbiankuang_black1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="选择班级"
                    android:textColor="#221815" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFF"
                    android:src="@mipmap/morexl" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_subject_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="22dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/xz_km"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_weight="1"
                    android:background="@drawable/yjbiankuang_black1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="选择科目"
                    android:textColor="#221815" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFF"
                    android:src="@mipmap/morexl" />
            </RelativeLayout>

            <TextView
                android:id="@+id/sure"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                android:background="@drawable/yjbiankuang_red_2"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
